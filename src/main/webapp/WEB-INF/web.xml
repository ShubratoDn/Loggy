<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- Configuring dispatcher servlet or FrontController -->
	<servlet>
		<servlet-name>loggy</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loggy</servlet-name>
		<url-pattern>/</url-pattern> <!-- / refers to handling all kinds of requests -->
	</servlet-mapping>


	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
		<taglib-location>/WEB-INF/lib/jstl-api.jar</taglib-location>
	</taglib>
</web-app>
